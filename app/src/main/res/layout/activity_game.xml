<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:grid="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/black"
                tools:context="com.earthblood.tictactoe.activity.GameActivity">


    <TextView
        android:id="@+id/message_turn_indicator"
        android:text="@string/message_turn_indicator"
        style="@style/statusTextLabel" />

    <TextView
        android:id="@+id/message_turn_indicator_value"
        android:layout_toRightOf="@+id/message_turn_indicator"
        android:layout_alignBaseline="@+id/message_turn_indicator"
        style="@style/statusTextBig" />

    <android.support.v7.widget.GridLayout
               android:id="@+id/game_grid_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_below="@+id/message_turn_indicator"
               grid:rowCount="3"
               grid:columnCount="3"
               grid:alignmentMode="alignBounds"
               grid:columnOrderPreserved="true"
               grid:rowOrderPreserved="true"
               grid:orientation="horizontal">

        <Button android:id="@+id/box_1"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_2"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_3"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_4"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_5"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_6"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_7"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_8"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_9"

                  style="@style/btnStyleToe"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>

    </android.support.v7.widget.GridLayout>

    <Button android:id="@+id/new_game_button"
            style="@style/btnStyleGenoa"
            android:text="@string/new_game"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_grid_layout"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:onClick="newGame"/>



</RelativeLayout>