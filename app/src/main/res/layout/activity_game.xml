<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:grid="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.earthblood.tictactoe.activity.GameActivity">


    <android.support.v7.widget.GridLayout
               android:id="@+id/game_grid_layout"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:gravity="center"
               grid:rowCount="3"
               grid:columnCount="3"
               grid:alignmentMode="alignBounds"
               grid:columnOrderPreserved="true"
               grid:rowOrderPreserved="true"
               grid:orientation="horizontal">

        <Button android:id="@+id/box_1"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_2"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_3"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_4"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_5"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_6"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_7"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_8"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>
        <Button android:id="@+id/box_9"
                  grid:layout_gravity="fill_horizontal"
                  android:layout_width="94dp"
                  android:layout_height="120dp"
                  android:onClick="chooseBox"/>

    </android.support.v7.widget.GridLayout>


</RelativeLayout>